= form_with(model: node) do |form|
  - if node.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(node.errors.count, "error")
        prohibited this node from being saved:
      %ul
        - node.errors.each do |error|
          %li= error.full_message
  .form-group
    = form.label :owner, style: "display: block"
    = form.text_field :owner, class: "form-control"
  .form-group
    = form.label :category, style: "display: block"
    = form.text_field :category, class: "form-control"
  .form-group
    = form.label :subcategory, style: "display: block"
    = form.text_field :subcategory, class: "form-control"
  .form-group
    = form.label :url, style: "display: block"
    = form.text_field :url, class: "form-control"
  .form-group
    = form.label :api_key, style: "display: block"
    = form.text_field :api_key, class: "form-control"
  .form-group
    %br/
    %button{type: "submit", class: "btn btn-primary"}
      Create node
